@{
    ViewBag.Title = "Contact";
}

<!DOCTYPE html>
<body>
<h2>Contact Dzvera and her owners</h2>
    <main>
        <div class="container body-content span=8 offset=2">
            <form class="form-horizontal">
                <fieldset>
                    <legend> Contact Info </legend>


                    <div class="form-group">
                        <label class="col-sm-4 control-label"> Full Name </label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control"  placeholder="Full Name">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label"> Email </label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control"  placeholder="email@internet.com">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label"> Subject </label>
                        <div class="col-sm-4">
                            <input type="text" class="form-control"  placeholder="What's the matter?'">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label"> Tell us </label>
                        <div class="col-sm-4">
                            <textarea class="form-control" placeholder="What's on your mind?" rows="7"> </textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <button type="reset" class="btn btn-default"> Cancel </button>
                            <button type="submit" class="btn btn-primary"> Send </button>
                        </div>
                     </div>
                </fieldset>
            </form>
        </div>
    </main>
</body>